/*tenary condition*/
const bill = 430;
const tip = bill>= 50 && bill <=300 ? bill * 15/100 : bill * 20/100;
const totalValue = bill + tip;
console.log('The bill was ' + bill);
console.log('The tip was ' + tip);
console.log('The value was ' + totalValue);





